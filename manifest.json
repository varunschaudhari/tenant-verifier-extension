{
  "manifest_version": 3,
  "name": "Tenant Verification India",
  "version": "1.0.3",
  "description": "Verify tenant information in India with ease. Check rental history, identity verification, and background details.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "notifications",
    "contextMenus"
  ],
  "host_permissions": [
    "https://*.gov.in/*",
    "https://*.nic.in/*",
    "https://*.uidai.gov.in/*",
    "https://*.incometax.gov.in/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Tenant Verification India",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["env.config.js", "content.js"],
      "css": ["content.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
